
@model Pie

<h2>@Model.Name</h2>

<div class="card">
    <img class="card-img-top" src="@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">
            <a asp-controller="Pie"
               asp-action="Details"
               asp-route-id="@Model.PieId">@Model.Name</a> - @Model.Price.ToString("c")
        </h5>
        <p class="card-text">@Model.ShortDescription</p>
        <a class="btn btn-primary"
           asp-controller="ShoppingCart"
           asp-action="AddToShoppingCart"
           asp-route-pieId="@Model.PieId">Add to cart</a>
    </div>
</div>